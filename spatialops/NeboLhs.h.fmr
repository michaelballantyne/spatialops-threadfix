                                     (nif (fc 'valid)
                                          (n= 'location_ "0")
                                          (n+= 'current_ (n+ 'x (n* 'y 'xLength_)))))
                               (list (n+= 'current_ 'step_)
                                     (n++ 'location_))
                               (n>= 'location_ 'zExtent_)
                               (l '* 'current_)
                               (list (sadp vt-chunk 'current_)
                                     (sad 'int 'location_)
                                     (sad 'int 'valid_)
                                     (sadc 'int 'xLength_)
                                     (sadc 'int 'xExtent_)
