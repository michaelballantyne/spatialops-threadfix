                                       'field_)
                                    (let ([extent-def (lambda (num)
                                                        (nt= 'int
                                                             (l 'extent num)
                                                             (mfc (mfc 'field_ 'window_with_ghost)
                                                                  'extent
                                                                  num)))]
                                          [dim-def (lambda (name extent)
                                                     (nt= 'int name (n+ (n/ extent 'blockDim)
