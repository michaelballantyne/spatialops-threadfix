(define (point-to-value dir)
  (c (fc (scope 'Point 'int_vec))
     "["
     dir
     "]"))

(define (eval-struct name tpl-pmtrs tpl-args typedefs return-expr)
  (s-tpl-srt-def name
                 tpl-pmtrs
                 tpl-args
                 typedefs
                 (r-fcn-def (s-fcn-dcl 'eval
                                       vt-chunk
                                       (list (adcr 'Arg 'arg)
                                             (adcr 'Coefs 'coefs)
                                             (adc 'int 'x)
                                             (adc 'int 'y)
                                             (adc 'int 'z)))
                            null
                            return-expr)))

(define (general-eval-struct name)
  (eval-struct name
               (tpl-pmtr 'PointCollection)
               null
               (list (s-typedef (tpl-use NSCC (scope 'PointCollection 'length))
                                'Coefs)
                     (s-typedef (tpl-pmtr (scope 'PointCollection 'Point))
                                'Point)
                     (s-typedef (tpl-pmtr (scope 'PointCollection 'Collection))
                                'Collection))
               (n+ (fc (scope (tpl-use name 'Collection)
                              'eval)
                       'arg
                       (mfc 'coefs 'others)
                       'x
                       'y
                       'z)
                   (n* (mfc 'arg
                            'eval
                            (n+ 'x (point-to-value "0"))
                            (n+ 'y (point-to-value "1"))
                            (n+ 'z (point-to-value "2")))
                       (mfc 'coefs 'coef)))))

(define (single-eval-struct name)
  (eval-struct name
               (tpl-pmtr 'Point)
               (c (tpl-use NSPC 'Point Nil-chunk) s)
               (s-typedef (tpl-use NSCC "1")
                          'Coefs)
               (n* (mfc 'arg
                        'eval
                        (n+ 'x (point-to-value "0"))
                        (n+ 'y (point-to-value "1"))
                        (n+ 'z (point-to-value "2")))
                   (mfc 'coefs 'coef))))

(define (sum-eval-struct name tpl-pmtrs tpl-args typedefs return-expr)
  (s-tpl-srt-def name
                 tpl-pmtrs
                 tpl-args
                 typedefs
                 (r-fcn-def (s-fcn-dcl 'eval
                                       vt-chunk
                                       (list (adcr 'Arg 'arg)
                                             (adc 'int 'x)
                                             (adc 'int 'y)
                                             (adc 'int 'z)))
                            null
                            return-expr)))

(define (sum-general-eval-struct name)
  (sum-eval-struct name
                   (tpl-pmtr 'PointCollection)
                   null
                   (list (s-typedef (tpl-pmtr (scope 'PointCollection 'Point))
                                    'Point)
                         (s-typedef (tpl-pmtr (scope 'PointCollection 'Collection))
                                    'Collection))
                   (n+ (fc (scope (tpl-use name 'Collection)
                                  'eval)
                           'arg
                           'x
                           'y
                           'z)
                       (mfc 'arg
                            'eval
                            (n+ 'x (point-to-value "0"))
                            (n+ 'y (point-to-value "1"))
                            (n+ 'z (point-to-value "2"))))))

(define (sum-single-eval-struct name)
