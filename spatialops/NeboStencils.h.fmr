                          (r-fcn-def (constize (fcn-dcl 'others (tc (tpl-use NSCC (n- 'Length "1")))))
                                     null
                                     'others_))
                 (priv-sec (sadc (tpl-use NSCC (n- 'Length "1")) 'others_)
                           (sadc 'double 'coef_)))

